<style>
    /*_sidebar.html.erbのcss*/
#bird_icon{
    padding-left: 20px;
}
#sidebar_list{
    display:block;
    background:#ffffff;
    color:#000000;
    border-radius:50px;
    font-size:13pt;
    list-style: none;
}
#sidebar_list:hover{
    background:#dcdcdc;
}


#sidebar_linkTo:link{
    text-decoration: none;
    color:#000000;
}
#sidebar_linkTo:visited{
    text-decoration: none;
    color:#000000;
}
#sidebar_img{
    vertical-align:middle;
}


#new_button{
    display:block;
    line-height:40px;
    background:#00acee;
    color:white;
    border-radius:50px;
    text-align:center;
    text-decoration: none;
    font-size:10pt;
    padding:10px 0px;
    font-weight: bold;
    margin-top:10px;
    
}
.new_linkTo:link{
    text-decoration: none;
    color:white;
}
.new_linkTo:visited{
    text-decoration: none;
    color:white;
}

/* 点滅 */
.blinking{
	-webkit-animation:blink 1.5s ease-in-out infinite alternate;
    -moz-animation:blink 1.5s ease-in-out infinite alternate;
    animation:blink 1.5s ease-in-out infinite alternate;
    text-align:center;
    padding-left:50px;
}
@-webkit-keyframes blink{
    0% {opacity:0;}
    100% {opacity:1;}
}
@-moz-keyframes blink{
    0% {opacity:0;}
    100% {opacity:1;}
}
@keyframes blink{
    0% {opacity:0;}
    100% {opacity:1;}
}
</style>