        <li id = "sidebar_list"><%= image_tag 'sharp36.PNG', id:'sidebar_img' %><%= link_to '話題を検索', '/tweet', id:'sidebar_linkTo'%></li>
        <li id = "sidebar_list"><%= image_tag 'bell36.PNG', id:'sidebar_img' %><%= link_to '通知', '/tweet', id:'sidebar_linkTo'%></li>
        <li id = "sidebar_list"><%= image_tag 'mail36.PNG', id:'sidebar_img' %><%= link_to 'メッセージ', '/tweet', id:'sidebar_linkTo'%></li>
        <li id = "sidebar_list"><%= image_tag 'bookmark36.PNG', id:'sidebar_img' %><%= link_to 'ブックマーク', '/tweet', id:'sidebar_linkTo'%></li>
        <li id = "sidebar_list"><%= image_tag 'list36.PNG', id:'sidebar_img' %><%= link_to 'リスト', '/tweet', id:'sidebar_linkTo'%></li>
